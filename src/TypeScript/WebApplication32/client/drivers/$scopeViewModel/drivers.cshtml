<div vs-ng-scope="MyApp.Drivers.UsingScopeViewModel.IDriversScope" ng-controller="MyApp.Drivers.UsingScopeViewModel.DriversController">
    <h2>$scope with a View Model</h2>

    <table>
        <caption>Drivers Championship Standings</caption>
        <thead>
            <tr><th>&nbsp;</th><th>Name</th><th>Team</th><th>Points</th></tr>
            <tr>
                <td></td>
                <td>
                    <input type="text" ng-model="viewModel.name" placeholder="name filter" />
                </td>
                <td>
                    <input type="text" ng-model="viewModel.teamName" placeholder="team name filter" />
                </td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="driver in viewModel.drivers | filter: viewModel.driverFilter">
                <td>{{ driver.id }}</td>
                <td>
                    <img ng-show="driver.image" ng-src="{{ driver.image }}" />
                    <a ng-href="/drivers/{{ driver.id }}">
                        {{ driver.firstName }}&nbsp;{{ driver.lastName }}
                    </a>
                </td>
                <td>{{ driver.teamName }}</td>
                <td>{{ driver.points }}</td>
            </tr>
        </tbody>
    </table>
</div>